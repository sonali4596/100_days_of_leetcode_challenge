class Solution {
    public int numSub(String s) {
        final int MOD = 1_000_000_007;
        long ans = 0;
        long run = 0; // current consecutive '1's

        for (int i = 0; i < s.length(); i++) {
            if (s.charAt(i) == '1') {
                run++;
            } else {
                if (run > 0) {
                    ans = (ans + run * (run + 1) / 2) % MOD;
                    run = 0;
                }
            }
        }

        // if string ends with '1's, add the last run
        if (run > 0) {
            ans = (ans + run * (run + 1) / 2) % MOD;
        }

        return (int) ans;
    }
}
